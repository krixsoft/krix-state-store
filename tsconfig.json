{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "removeComments": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts",
    "typings/**/*.ts",
    // etc
    
    // if you are going to parse JS files
    "src/**/*/.js"
  ]
}